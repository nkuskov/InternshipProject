<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/add_destination_window"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="#0d47a1"
                android:gravity="center_horizontal">

    <ScrollView
        android:scrollbarStyle="outsideInset"
        android:layout_marginTop="5dp"
        android:id="@+id/add_new_dest_icons"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true">


        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <GridLayout
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:padding="5dp"
                android:columnCount="5"
                android:rowCount="2">

                <ImageButton
                    android:padding="2dp"
                    android:src="@drawable/fitness_center_icon"
                    android:background="#00ffffff"/>
                <ImageButton
                    android:padding="2dp"
                    android:src="@drawable/hotel_icon"
                    android:background="#00ffffff"/>
                <ImageButton
                    android:padding="2dp"
                    android:src="@drawable/home_icon"
                    android:background="#00ffffff"/>
                <ImageButton
                    android:padding="2dp"
                    android:src="@drawable/railway_icon"
                    android:background="#00ffffff"/>
                <ImageButton
                    android:padding="2dp"
                    android:src="@drawable/airport_icon"
                    android:background="#00ffffff"/>
                <ImageButton
                    android:padding="2dp"
                    android:src="@drawable/work_icon"
                    android:background="#00ffffff"/>
                <ImageButton
                    android:padding="2dp"
                    android:src="@drawable/hospital_icon"
                    android:background="#00ffffff"/>
                <ImageButton
                    android:padding="2dp"
                    android:src="@drawable/theatre_icon"
                    android:background="#00ffffff"/>
                <ImageButton
                    android:padding="2dp"
                    android:src="@drawable/bar_icon"
                    android:background="#00ffffff"/>
                <ImageButton
                    android:padding="2dp"
                    android:src="@drawable/child_icon"
                    android:background="#00ffffff"/>
                <ImageButton
                    android:padding="2dp"
                    android:src="@drawable/relationship_icon"
                    android:background="#00ffffff"/>
                <ImageButton
                    android:padding="2dp"
                    android:src="@drawable/bank_icon"
                    android:background="#00ffffff"/>
                <ImageButton
                    android:padding="2dp"
                    android:src="@drawable/restaurant_icon"
                    android:background="#00ffffff"/>


            </GridLayout>
        </RelativeLayout>
    </ScrollView>


    <EditText
        android:id="@+id/edTextFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_new_dest_icons"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:ems="13"
        android:hint="Введите место..."
        android:textSize="15sp"/>

    <LinearLayout
        android:id="@+id/auto_complete_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edTextFragment"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <AutoCompleteTextView
            android:id="@+id/auto_complete_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="13"
            android:hint="Введите адрес..."
            android:textSize="15sp"/>

        <requestFocus/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_destination_fragment_btns_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/auto_complete_layout"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_new_destination_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/close_fragment_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:text="cancel"
            android:textSize="15sp"/>

    </LinearLayout>


</RelativeLayout>